{% extends 'base.html.twig' %}

{% block title %}Hello ListMusiqueController!
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/listemusique.css') }}"/>
{% endblock %}
{% block body %}
	<main>
		<h2>Les musiques associés à votre liste</h2>
		<table class="container">
			<thead>
				<tr id="notshadow">
					<th>
						<h1>Titre</h1>
					</th>
					<th>
						<h1>Artiste</h1>
					</th>
					<th>
						<h1>Album</h1>
					</th>
					<th>
						<h1>Année</h1>
					</th>
					<th>
						<h1>Style</h1>
					</th>
				</tr>
			</thead>
			<tbody>
				{% for musique in musiques %}
					<tr>
						<td>{{musique.titre}}</td>
						<td>{{musique.artist}}</td>
						<td>{{musique.album}}</td>
						<td>{{musique.annee}}</td>
						<td>{{musique.style}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div>
			<h2>Ajouter des musiques à
				{{list.nomList}}</h2>
			<form class="form-style-7">
				<ul>
					<li>
						<label for="titre">Titre</label>
						<input type="text" name="titre" maxlength="100">
						<span>Entrer le titre de la musique</span>
					</li>
					<li>
						<label for="artiste">Email</label>
						<input type="text" name="artiste" maxlength="100">
						<span>Entrer le pseudo du chanteur</span>
					</li>
					<li>
						<label for="album">Album</label>
						<input type="text" name="album" maxlength="100">
						<span>Entrer l'album de lequel la musique s'il éxiste</span>
					</li>
					<li>
						<label for="annee">Année</label>
						<input type="number" name="annee">
						<span>Entrer l'année de sortie de la musique</span>
					</li>
					<li>
						<label for="style">Style</label>
						<input type="text" name="style">
						<span>Entrer le style de la musique</span>
					</li>
					<li>
						<input type="submit" value="Send This">
					</li>
				</ul>
			</form>
		</div>
	</main>
	<aside>
		<img id="logo" src="{{asset('assets/images/logo.png')}}" alt="logo de l'entreprise">
		<h3 id="date">{{list.idEvenement.date|date('d-m')}}</h3>
		<p class="title imp">Midnight Musique</p>
		<p id="animera" class="title space">Animera votre</p>
		<p class="title imp space">{{list.idEvenement.occasion}}</p>
		<p id="lieux">à
			{{ list.idEvenement.lieux }}</p>
	</aside>
{% endblock %}
