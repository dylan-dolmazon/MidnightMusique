<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}{% endblock %}
		<link rel="stylesheet" href="{{ asset('assets/css/navbar.css') }}">
		<script src="https://kit.fontawesome.com/1ac4abec3a.js" crossorigin="anonymous"></script>
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<header>
		<nav>
			<img id="logo" src="{{asset('assets/images/logo.png')}}" alt="logo de l'entreprise">
			<div id="mySidenav" class="sidenav">
				<a id="closeBtn" href="#" class="close">×</a>
				<ul>
					<li><a id="one"href="{{path('show_evenement')}}">Evenement</a></li>
					<li><a id="two"href="{{path('show_musique')}}">Catalogue</a></li>
					<li><a id="three"href="{{path('show_Avis')}}">Avis</a></li>
					<li><a
						{% if app.session.get('connected') == true %}
							{% if app.session.get('connected')is defined %} 
								href="{{path('add_evenement')}}"
							{% endif %}
						{% else %} 
							class="button disabled"
							href="#"
						{% endif %} 
						id="four">ajout Evenement</a>
					</li>
				</ul>
			</div>
			<a href="#" id="openBtn">
				<span class="burger-icon">
					<span></span>
					<span></span>
					<span></span>
				</span>
			</a>
		</nav>
	</header>
	{% block body %}{% endblock %}
	<footer class="footer-distributed">

		<div class="footer-left">

			<h3>Midnight<span>Musique</span>
			</h3>

			<p class="footer-links">
				<a class="link-1" href="{{path('show_evenement')}}">Evenement</a>

				<a href="{{path('show_musique')}}">Catalogue</a>

				<a href="{{path('show_Avis')}}">Avis</a>

			</p>

			<p class="footer-company-name">MidnightMusique © 2022</p>
		</div>

		<div class="footer-center">

			<div>
				<i class="fa fa-map-marker"></i>
				<p>
					<span>Le Triadour</span>
					43260, Saint-Hostien</p>
			</div>

			<div>
				<i class="fa fa-phone"></i>
				<p>06-71-78-74-75</p>
			</div>

			<div>
				<i class="fa fa-envelope"></i>
				<p>
					<a href="mailto:support@company.com">midnightmusique@yahoo.com</a>
				</p>
			</div>

		</div>

		<div class="footer-right">

			<p class="footer-company-about">
				<span>A Propos de MidnightMusique</span>
				Lorem ipsum dolor sit amet, consectateur adispicing elit. Fusce euismod convallis velit, eu auctor lacus vehicula sit amet.
			</p>

			<div class="footer-icons">

				<a target="_blank" href="https://www.facebook.com/pages/category/DJ/Midnight-Musique-110102317280430/">
					<i class="fa fa-facebook"></i>
				</a>
				<a target="_blank" href="https://www.google.com/search?q=Midnight+Musique%2C+Le+Triadour%2C+Saint-Hostien&rlz=1C5CHFA_enFR1000FR1000&ei=BKmDYvibGurh7_UPyYSVyAE&oq=Midnight+musique+sa&gs_lcp=Cgdnd3Mtd2l6EAMYADICCCY6BwgAEEcQsAM6BQgAEIAEOgYIABAWEB5KBAhBGABKBAhGGABQmRVYnR9gvCpoAnABeACAAWeIAZwFkgEDNi4xmAEAoAEByAEIwAEB&sclient=gws-wiz">
					<i class="fa fa-google"></i>
				</a>
				<a target="_blank" href="https://www.pagesjaunes.fr/pros/60239354">
					<i class="fa-solid fa-address-book"></i>
				</a>
			</div>

		</div>

	</footer>
	<script>
		var sidenav = document.getElementById("mySidenav");
		var openBtn = document.getElementById("openBtn");
		var closeBtn = document.getElementById("closeBtn");
		openBtn.onclick = openNav;
		closeBtn.onclick = closeNav;


		/* Set the width of the side navigation to 250px */
		function openNav() {
		sidenav.classList.add("active");
		}

		/* Set the width of the side navigation to 0 */
		function closeNav() {
		sidenav.classList.remove("active");
		}
	</script>
</html>
