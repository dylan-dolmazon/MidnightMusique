{% extends 'base.html.twig' %}

{% block title %}Hello MusiqueController!
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/catalogue.css') }}"/>
{% endblock %}
{% block body %}
	<main>
		<h2>Mon catalogue de musique</h2>
		<table class="container">
			<thead>
				<tr id="notshadow">
					<th>
						<h1>Titre</h1>
					</th>
					<th>
						<h1>Artiste</h1>
					</th>
					<th>
						<h1>Album</h1>
					</th>
					<th>
						<h1>Ann√©e</h1>
					</th>
					<th>
						<h1>Style</h1>
					</th>
				</tr>
			</thead>
			<tbody>
				{% for musique in musiques %}
					<tr>
						<td>{{musique.titre}}</td>
						<td>{{musique.artist}}</td>
						<td>{{musique.album}}</td>
						<td>{{musique.annee}}</td>
						<td>{{musique.style}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
	<aside>
		{{form(form)}}
		</aside>
	{% endblock %}
