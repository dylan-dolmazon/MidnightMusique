{% extends 'base.html.twig' %}

{% block title %}Hello MusiqueController!
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/addMusique.css') }}">
{% endblock %}
{% block body %}
	<main>
		<div id="searchform">
			<p>Rechercher une Musique</p>
			{{form_start(searchform)}}
			<div class ="contain-group">
				<div class="group">
					{{form_widget(searchform.Artiste)}}
					<span class="highlight"></span>
					<span class="bar"></span>
				</div>
			</div>
			<div class="dropdown">
				{{form_widget(searchform.Search)}}
			</div>
			<div class ="contain-group">
				<div class="group">
					{{form_widget(searchform.Choice)}}
					<span class="highlight"></span>
					<span class="bar"></span>
				</div>
			</div>
			{{form_end(searchform)}}
		</div>
	</main>
	<aside>
		<div class="login-box">
			{{form_start(form)}}
			<div class="user-box">
				{{form_widget(form.artist)}}
				{{form_label(form.artist)}}
			</div>
			<div class="user-box">
				{{form_widget(form.album)}}
				{{form_label(form.album)}}
			</div>
			<div class="user-box">
				{{form_widget(form.annee)}}
				{{form_label(form.annee)}}
			</div>
			<div class="user-box">
				{{form_widget(form.style)}}
				{{form_label(form.style)}}
			</div>
			<div class="user-box">
				{{form_widget(form.titre)}}
				{{form_label(form.titre)}}
			</div>
			{{form_end(form)}}
		</div>
	</aside>
{% endblock %}
