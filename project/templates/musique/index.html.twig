{% extends 'base.html.twig' %}

{% block title %}Hello MusiqueController!
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/addevenement.css') }}">
{% endblock %}
{% block body %}
	<main>
		<div class="login-box">
			{{form_start(form)}}
			<div class="user-box">
				{{form_widget(form.artist)}}
				{{form_label(form.artist)}}
			</div>
			<div class="user-box">
				{{form_widget(form.album)}}
				{{form_label(form.album)}}
			</div>
			<div class="user-box">
				{{form_widget(form.annee)}}
				{{form_label(form.annee)}}
			</div>
			<div class="user-box">
				{{form_widget(form.style)}}
				{{form_label(form.style)}}
			</div>
			<div class="user-box">
				{{form_widget(form.titre)}}
				{{form_label(form.titre)}}
			</div>
			{{form_end(form)}}
		</div>
	</main>
{% endblock %}
