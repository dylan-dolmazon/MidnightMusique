{% extends 'base.html.twig' %}

{% block title %}Hello EvenementController!
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/addevenement.css') }}">
{% endblock %}

{% block body %}
	<main>
		{% for message in app.flashes('notification') %}
			<div class="alert alert-info alert-dismissible fade show">
				{{ message }}
			</div>
		{% endfor %}
		<div class="login-box">
			{{form_start(form)}}
			<div class="user-box">
				{{form_widget(form.date)}}
			</div>
			<div class="user-box">
				{{form_widget(form.lieux,{'attr': {'class':"required"} })}}
				{{form_label(form.lieux)}}
			</div>
			<div class="user-box">
				{{form_widget(form.occasion)}}
				{{form_label(form.occasion)}}
			</div>
			<div class="user-box">
				{{form_widget(form.theme)}}
				{{form_label(form.theme)}}
			</div>
			<div class="user-box">
				{{form_widget(form.nbInvite)}}
				{{form_label(form.nbInvite)}}
			</div>
			<div class="user-box">
				{{form_widget(form.password)}}
				{{form_label(form.password)}}
			</div>
			{{form_end(form)}}
		</div>
	</main>
{% endblock %}
